{
    "extends": [
        "airbnb-base",
        "prettier"
    ],
    "parserOptions": {
        "ecmaVersion": 2018,
        "sourceType": "module"
    },
    "env": {
        "browser": true,
        "node": true,
        "es6": true,
        "jest": true
    },
    "plugins": [
        "prettier"
    ],
    "rules": {
        "no-unused-vars": [
            "error",
            {
                "vars": "local",
                "args": "none"
            }
        ],
        "comma-dangle": "off",
        "prefer-const": "error",
        "no-var": "error",
        "no-underscore-dangle": "off",
        "prettier/prettier": [
            "error"
        ]
    }
}